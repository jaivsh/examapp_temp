<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <AutoCompleteTextView
        android:id="@+id/eligibilityState"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border_input"
        android:drawableLeft="@drawable/ic_action_eligibility_location"
        android:drawablePadding="15dp"
        android:dropDownSelector="@drawable/auto_complete_dropdown"
        android:ems="10"
        android:hint="Enter State"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:text=""
        android:textColor="#a6a6a6"
        android:textCursorDrawable="@null"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.145" />


    <TextView
        android:id="@+id/TextViewDate"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border_input"
        android:drawableLeft="@drawable/ic_action_calendar"
        android:drawablePadding="15dp"
        android:ems="10"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:textColor="@color/green_700"
        android:textCursorDrawable="@null"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.291" />

    <Spinner
        android:id="@+id/eligibilityEducation"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border_input"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Enter Qualification"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:text=""
        android:textColor="@color/black"
        android:textCursorDrawable="@null"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.433" />

    <Spinner
        android:id="@+id/category"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border_input"
        android:drawablePadding="15dp"
        android:ems="10"
        android:hint="Enter Category"
        android:inputType="text"
        android:paddingLeft="10sp"
        android:paddingTop="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="10sp"
        android:text=""
        android:textColor="@color/black"
        android:textCursorDrawable="@null"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.483"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.587" />

    <Button
        android:id="@+id/eligibilityStateAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="callNextStep"
        android:text="Calculate"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.783" />


</androidx.constraintlayout.widget.ConstraintLayout>